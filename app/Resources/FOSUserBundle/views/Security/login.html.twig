{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
{#{% if error %}#}
    {#<div>{{ error|trans({}, 'FOSUserBundle') }}</div>#}
{#{% endif %}#}

<form method="post" ng-submit="submitForm()">

    <input type="hidden"  name="_csrf_token" value="{{ csrf_token }}" ng-init="form._csrf_token='{{ csrf_token }}'"  />

    <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" ng-model="form._username" required="required" />

    <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
    <input type="password" id="password" name="_password" ng-model="form._password" required="required" />

    <input type="checkbox" id="remember_me" name="_remember_me" ng-model="form._remember_me" value="on" />
    <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
    <input type="submit" id="_submit" name="_submit"
           ng-init="form._submit='{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}'"
           value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}"  />
</form>


{% endblock fos_user_content %}
